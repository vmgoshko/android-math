<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.2">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn1" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="1" android:textSize="40dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn2" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="2" android:textSize="40dp"
                />
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btn3" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="3" android:textSize="40dp" android:typeface="sans"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btnPlus" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="+" android:textSize="40dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn4" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="4" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn5" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="5" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn6" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="6" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnMinus" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="-" android:textSize="40dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn7" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="7" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn8" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="8" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn9" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="9" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnMul" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="*" android:textSize="40dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnDot" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text="."/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btn0" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="0" android:textSize="40dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnComma" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text=","/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnDiv" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:text="/" android:textSize="40dp"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnLess" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text=""/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnGreat" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text=""/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnMod" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text="%"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/btnPow" android:background="@drawable/button" android:layout_weight="0.25"
                android:layout_margin="3dp" android:textSize="40dp" android:text="^"/>
    </TableRow>
</TableLayout>