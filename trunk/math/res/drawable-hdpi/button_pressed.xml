<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:color="#000000" android:width="0.5dp"/>
            <!-- <size android:height="25dp" android:width="40dp"/> -->
            <gradient android:type="linear" android:startColor="#404040" android:centerColor="#252525" android:endColor="#252525" android:angle="90"/>
            <corners android:radius="3dp" />
        </shape>
    </item>



    <item android:bottom="4dp" android:top="4dp" android:left="3dp" android:right="3dp">
        <shape>

            <gradient android:type="linear" android:startColor="#303030" android:centerColor="#454545" android:endColor="#454545" android:angle="-90"/>
            <corners android:radius="1dp" />
        </shape>
    </item>

</layer-list>